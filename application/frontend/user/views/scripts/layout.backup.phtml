			function formAjax() {

				$('form.ajax').submit(function() {
					var form = $(this);

	    	        $(this).ajaxSubmit({

	    	            clearForm: true, // clear all form fields after successful submit 
	    	            
	    	            beforeSubmit: function(formData, jqForm, options) { 
	    	            	$(form).find(".error").slideUp() // esconde as mensangens de erro
	    	        		form.find('button[type=submit]').after('<img src="/img/assets/ajax-loader.gif" class="loader" style="float:left" />') // exibe carregando
	    	    			form.find('button[type=submit]').fadeOut(); // desabilita submit
	    	        	    return true;
	    	        	},
	    	        	
	    	            success: function(responseText, statusText, xhr, form) { 
	    	        		$(location).attr('href', responseText);
	    	            },
	    	            
	    	            error: function(XMLHttpRequest, textStatus, errorThrown) {
	    	            	var responseText = XMLHttpRequest.responseText; // pega mensagem de erro
	    	            	$(form).find(".error").html(responseText).slideDown(); // exibe o erro
	    	            	form.find('img.loader').fadeOut('slow'); // esconde carregando
	    	            	form.find('button[type=submit]').fadeIn(); // volta a habitar o submit
	    	            }

	    	        });
	    	        /* End JQuery Form Plugin */

	    	        return false;
	    	    });

			}
